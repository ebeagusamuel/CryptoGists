<div class='d-flex main_p'>
  <div class='feeds'>
    <div>
      <%= image_tag @user.profile_image, class: 'cover_img' %>
    </div>

    <div class='mt-4 mx-4 p-3 bg-white rounded'>
      <h4 class='text-secondary font-weight-bold'>Gists by <%= @user.name %></h4><hr/>
      <%= render 'gists/display-gists' %>
    </div>
  </div>

  <div class='right_bar border-left border-gray'>
    <div class='text-center mx-auto mt-4 pb-3 border-bottom border-gray'>
      <%= image_tag @user.profile_image, width: 100, height: 100, class: 'rounded-circle' %>
      <p class='text-dark font-weight-bold mb-1'><%= @user.name %></p>
      <%= link_to 'Follow', root_path, class: 'btn btn-primary' %>
    </div>
    
    <div class='d-flex'>
      <div class='flex-grow-1 pt-2 text-center border-right border-bottom border-gray'>
        <span class='font-weight-bold text-dark'>10</span>
        <p class='text-secondary'>Gists</p>
      </div>
      <div class='flex-grow-1 pt-2 text-center border-right border-bottom border-gray'>
        <span class='font-weight-bold text-dark'>10</span>
        <p class='text-secondary'>Following</p>
      </div>
      <div class='flex-grow-1 pt-2 text-center border-bottom border-gray'>
        <span class='font-weight-bold text-dark'>10</span>
        <p class='text-secondary'>Followers</p>
      </div>
    </div>

    <div class='p-4'>
      <h4 class='text-secondary font-weight-bold'>Followed by</h4><hr/>

      <% @users.each do |user|%>
        <div class='row px-2'>
          <div class='col-4 pr-0'>
            <%= link_to user_path(user) do %>
              <%= image_tag user.profile_image, class: 'pp rounded-circle' %>
            <% end %>
          </div>
          <div class='col-8 pl-0'>
            <%= link_to user.name, user_path(user), class: 'text-decoration-none ' %>
            <%= link_to 'Unfollow', root_path, class: 'd-inline-block px-2 py-1 text-white bg-primary rounded text-decoration-none' %>
          </div>
        </div><hr/>
      <% end %>
    </div>
  </div>
</div>